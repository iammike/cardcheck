{
  "manifest_version": 3,
  "name": "CardChecking",
  "version": "1.0.0",
  "description": "Check trading card prices from PriceCharting while browsing eBay listings",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.ebay.com/*",
    "https://www.pricecharting.com/*",
    "https://www.sportscardspro.com/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.ebay.com/itm/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
